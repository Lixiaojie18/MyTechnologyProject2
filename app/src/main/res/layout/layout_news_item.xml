<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/iv_image_news"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>


    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_marginLeft="15dp"
        android:maxLength="16"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/iv_image_news"
        android:layout_alignTop="@+id/iv_image_news"
        android:layout_marginTop="18dp"/>



    <TextView
        android:id="@+id/tv_news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_below="@+id/tv_news_title"
        android:layout_alignLeft="@+id/tv_news_title"
        android:layout_marginTop="6dp"/>


    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_image_news"/>



</RelativeLayout>