<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_left">

    <RelativeLayout
        android:id="@+id/layout_unlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">

        <ImageView
            android:id="@+id/iv_loginImageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>

        <TextView
            android:id="@+id/tv_loginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/iv_loginImageview"
            android:textColor="#ffffffff"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="100dp">

        <TextView
            android:id="@+id/updatenews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textColor="#ffffffff"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/share_little_bg">

            <ImageView
                android:id="@+id/fun_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/fun_share_weixin"/>

            <ImageView
                android:id="@+id/fun_qq"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/addimport_qq"/>

            <ImageView
                android:id="@+id/fun_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/fun_share_friends"/>

            <ImageView
                android:id="@+id/fun_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/fun_share_weibo"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_unlogined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">

        <ImageView
            android:id="@+id/iv_loginedImageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>

        <TextView
            android:id="@+id/tv_loginedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈尼已上线"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/iv_loginedImageview"
            android:textColor="#ffffffff"/>

    </RelativeLayout>

</RelativeLayout>
